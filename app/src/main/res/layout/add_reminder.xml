<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/addReminder_TitleTextBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hapticFeedbackEnabled="true"
        android:hint="@string/addReminder_TitleTextBox_Hint"
        android:inputType="text"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/addReminder_TitleTextBox_Text" />

    <Button
        android:id="@+id/addReminder_SetTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/addReminder_TimeButton_Text"
        app:layout_constraintStart_toStartOf="@+id/addReminder_TitleTextBox"
        app:layout_constraintTop_toBottomOf="@+id/addReminder_TitleTextBox"
        tools:text="12:29 AM" />

    <Button
        android:id="@+id/addReminder_SetDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/addReminder_TimeButton_Text"
        app:layout_constraintStart_toStartOf="@+id/addReminder_SetTimeButton"
        app:layout_constraintTop_toBottomOf="@+id/addReminder_SetTimeButton"
        tools:text="Sunday, February 14 2021" />

    <CheckBox
        android:id="@+id/addReminder_repeatingCheckBox"
        android:onClick="onCheckboxClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/addReminder_RepeatsCheckBox_Text"
        app:layout_constraintStart_toStartOf="@+id/addReminder_SetDateButton"
        app:layout_constraintTop_toBottomOf="@+id/addReminder_SetDateButton" />

    <Button
        android:id="@+id/addReminder_SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/addReminder_SubmitButton_Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="onClick"/>

    <RadioGroup
        android:id="@+id/addReminder_RadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/addReminder_repeatingCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/addReminder_repeatingCheckBox">

        <RadioButton
            android:id="@+id/addReminder_RBDOW"
            android:onClick="radioSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addReminder_RBDOW_Text" />

        <RadioButton
            android:id="@+id/addReminder_RBNOD"
            android:onClick="radioSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addReminder_RBNOD_Text" />

        <RadioButton
            android:id="@+id/addReminder_RBNOW"
            android:onClick="radioSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addReminder_RBNOW_Text" />

        <RadioButton
            android:id="@+id/addReminder_RBNOM"
            android:onClick="radioSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addReminder_RBNOM_Text" />

        <RadioButton
            android:id="@+id/addReminder_RBNOY"
            android:onClick="radioSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addReminder_RBNOY_Text" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/addReminder_LinearLayoutDOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addReminder_RadioGroup">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/addReminder_ChipGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/addReminder_ChipM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/addReminder_ChipM_Text"
                app:checkedIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/addReminder_ChipTu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/addReminder_ChipTu_Text"
                app:checkedIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/addReminder_ChipW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/addReminder_ChipW_Text"
                app:checkedIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/addReminder_ChipTh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/addReminder_ChipTh_Text"
                app:checkedIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/addReminder_ChipF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/addReminder_ChipF_Text"
                app:checkedIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/addReminder_ChipSa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/addReminder_ChipSa_Text"
                app:checkedIconEnabled="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/addReminder_ChipSu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/addReminder_ChipSu_Text"
                app:checkedIconEnabled="false" />
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addReminder_LinearLayoutNOD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="@+id/addReminder_RadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/addReminder_RadioGroup"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/addReminder_NODTextEvery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addReminder_RepeatsEveryText"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <EditText
            android:id="@+id/addReminder_NOD_Input"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:ems="10"
            android:gravity="end"
            android:hint="@string/_2"
            android:inputType="number" />

        <TextView
            android:id="@+id/addReminder_NODTextDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/days"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addReminder_LinearLayoutNOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/addReminder_RadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/addReminder_RadioGroup"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/addReminder_NOWTextEvery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/addReminder_RepeatsEveryText"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <EditText
            android:id="@+id/addReminder_NOW_Input"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:ems="10"
            android:gravity="end"
            android:hint="@string/_2"
            android:inputType="number" />

        <TextView
            android:id="@+id/addReminder_NOWTextWeeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/weeks"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addReminder_LinearLayoutNOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/addReminder_RadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/addReminder_RadioGroup"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/addReminder_NOMTextEvery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/addReminder_RepeatsEveryText"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <EditText
            android:id="@+id/addReminder_NOM_Input"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:ems="10"
            android:gravity="end"
            android:hint="@string/_2"
            android:inputType="number" />

        <TextView
            android:id="@+id/addReminder_NOMTextMonths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/months"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addReminder_LinearLayoutNOY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/addReminder_RadioGroup"
        app:layout_constraintTop_toBottomOf="@+id/addReminder_RadioGroup"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/addReminder_NOYTextEvery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/addReminder_RepeatsEveryText"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <EditText
            android:id="@+id/editTextNumber5"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:ems="10"
            android:gravity="end"
            android:hint="@string/_2"
            android:inputType="number" />

        <TextView
            android:id="@+id/addReminder_NODTextYears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/years"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>